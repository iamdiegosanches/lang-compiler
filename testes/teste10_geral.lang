data Player {
    health :: Int;
    inventory :: Bool[];
}

gameLoop(p :: Player) {
    p.health = 100;
    iterate p.health > 0 {
        p.health = p.health - 1;
        if p.health == 50 {
            print 1; -- "Metade da vida!"
        }
    }
    return;
}

main() {
    p1 :: Player;
    p1 = new Player;
    gameLoop(p1);
}